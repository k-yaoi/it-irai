    <%= form_for(@request) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :limit_date, '依頼者' %>
        <%= f.text_field :user_id,readonly:true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :limit_date, '期日' %>
        <%= f.text_field :limit_date,  class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description, '内容' %>
        <%= f.text_area :description, class: 'form-control', rows: 10 %>
      </div>

      
      <% if @request.persisted? %>
        <div class="form-group">
          <%= f.label :status, '状況' %>
          <%= f.select :status, Request.statuses.keys.to_a, {},  class: 'form-control' %>
        </div>
      <% else %>  
        <%= f.hidden_field :status, :value => "新規" %>
      <% end %>
      
      <% if @request.persisted? %>
        <div class="form-group">
          <%= f.label :charge_user, '' %>
          <%= f.select :charge_user, class: 'form-control' %>
        </div>
      <% else %>  
        <%= f.hidden_field :charge_user, :value => '' %>
      <% end %>

      
      

      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>