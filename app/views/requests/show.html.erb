<h2>■依頼詳細</h2>

<!--完了とするボタンは、管理者モードの場合のみ表示される-->
<% if current_user.admin? %>    
	  
  <div class="button_wrapper">
    <% if @request.persisted? %>
      <%= link_to ' 完了にする', request_path(request, id:@request.id ,charge_user_id: current_user.id ,status: "完了"), method: :patch, class: 'btn btn-lg btn-warning glyphicon glyphicon-flag' %>
    <% end %>
  </div>
  <br>
 <% end %>
  
  <div class="col-md-8 col-md-offset-2">

	<form class="form-horizontal" >
	
	  <div class="form-group">
	  	<label class="control-label" for="InputText">依頼者</label>
  		<input type="text" class="form-control" id="InputText" readonly="readonly" value=<%=  @user.name %>>
		</div>
	
	  <div class="form-group">
	  	<label class="control-label" for="InputText">タイトル</label>
  		<input type="text" class="form-control" id="InputText" readonly="readonly" value=<%= @request.title  %> >
		</div>
	
	  <div class="form-group">
	  	<label class="control-label" for="InputText">期日</label>
  		<input type="text" class="form-control" id="InputText" readonly="readonly" value=<%= @request.limit_date %> >
	  </div>
	
	  <div class="form-group">
	  	<label class="control-label" for="InputText">内容</label>
  		<textarea name="description" class="form-control" id="InputTextarea" readonly="readonly" rows="10"><%= @request.description %></textarea><br>
	  </div>
	
	  <div class="form-group">
	  	<label class="control-label" for="InputText">状況</label>
  		<input type="text" class="form-control" id="InputText" readonly="readonly" value=<%= @request.status %>>
		</div>

	  <div class="form-group">
	  	<label class="control-label" for="InputText">担当者</label>
  		<input type="text" class="form-control" id="InputText" readonly="readonly" value=<%= @request.charge_user_name %>  >
		</div>
	
	
	  <div class="form-group">
	  	<label class="control-label" for="InputText">回答内容</label>
  		<textarea name="message" class="form-control" id="InputTextarea" readonly="readonly" rows="10"><%= @request.message %></textarea><br>
		</div>
	</form>

	<!--編集・削除ボタンは、管理者モードの場合のみ表示される-->
  <div class="right_wrapper">
		<% if current_user.admin? %>    
			<%= link_to " edit", edit_request_path(@request), class: 'btn btn-primary glyphicon glyphicon-pencil'  %>
		    <%= link_to " delete", @request, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger glyphicon glyphicon-trash' %>
		<% end %>
  </div>

	<%= link_to '一覧に戻る', root_path %>

  </div>

</div>
